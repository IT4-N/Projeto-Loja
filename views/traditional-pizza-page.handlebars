<h1>Traditional</h1>

<p>Tamanho da pizza: </p>

<form action="/cart-page" method="post">
    <input type="radio" name="tradPizzaSize" id="tradPizzaBig" value="grande" checked>
    <label for="tradPizzaBig">Grande</label>
    <input type="radio" name="tradPizzaSize" id="tradPizzaLarge" value="familia">
    <label for="tradPizzaLarge">Fam√≠lia</label>

    {{#each noStockProducts}}
        {{#if (eq this.type "Tradicional")}}
            <section class="added-traditional-pizzas">
                <input type="checkbox" name="tradPizzaName" id="tradPizzaName-{{@index}}" value="{{this.name}}">
                <label for="tradPizzaName-{{@index}}">{{this.name}}</label>
            </section>
        {{/if}}
    {{/each}}

    <p>Total: R$ {{totalPrice}},00</p>

    <button type="submit">Adicionar ao Carrinho</button>
</form>